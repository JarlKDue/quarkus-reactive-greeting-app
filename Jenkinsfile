            openshift.withCluster() {
                openshift.withProject() {
                  }
                }
            }
        }
      }
    }
    stage('deploy') {
      steps {
        script {
            openshift.withCluster() {
                openshift.withProject() {
                  }
                }
            }
        }
      }
    stage('tag') {
      steps {
        script {
            openshift.withCluster() {
                openshift.withProject() {
                }
            }
